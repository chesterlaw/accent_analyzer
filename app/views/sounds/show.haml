= notice

.sounds-show
  %h2
    = @sound.name
    %span= "(#{@sound.filename})"

  .links
    = link_to 'Edit', edit_sound_path(@sound)
    = link_to 'Back', sounds_path

  %audio{src: "/sounds/#{@sound.filename}", controls: ''}
  %h3
    %span Current Time (in milliseconds):
    %span.current-time 0

  .sections
    %h2 Sections
    - @sound.sections.each do |section|
      .section-box
        = section.name
        = "#{section.start_time}ms - #{section.end_time}ms"
        %button Play

  .new-section
    %h2 New Section
    = form_for(@section) do |f|
      = f.hidden_field :sound_id, value: @sound.id

      .field
        = f.label :start_time
        = f.number_field :start_time

      .field
        = f.label :end_time
        = f.number_field :end_time

      .field
        = f.label :name
        = f.text_field :name

      = f.submit
